---
import "/src/styles/global.css";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Resume from "../components/Resume.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import Footer from "../components/Footer.astro";
import SobreMi from "../components/SobreMi.astro";

interface Props {
  title?: string;
}
const { title = "Albert Venegas - Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <title>{title}</title>
    <meta
      name="description"
      content="Portfolio de Albert Venegas, Programador Web"
    />
    <link rel="icon" type="image/svg+xml" href="/icon.webp" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&family=Onest:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div
      class="absolute top-0 z-[-2] w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
      <header class="fixed top-0 left-1/2 -translate-x-1/2 w-2xl z-50">
        <><Header id="top" /> </>
      </header>
      <main class="w-4xl mx-auto mt-36">
        <slot> <section><Resume /></section></slot>
        <section class="border-2 border-transparent" id="experiencia">
          <div class="flex items-center gap-5 mb-7 mt-36">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="#8E51FF"
              class="size-6 text-gray-900 dark:text-white"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M14 2a3 3 0 0 1 3 3v1h2a3 3 0 0 1 3 3v9a3 3 0 0 1 -3 3h-14a3 3 0 0 1 -3 -3v-9a3 3 0 0 1 3 -3h2v-1a3 3 0 0 1 3 -3zm0 2h-4a1 1 0 0 0 -1 1v1h6v-1a1 1 0 0 0 -1 -1"
              ></path></svg
            >

            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
              Experiencia Laboral
            </h2>
          </div>

          <Experience />
        </section>
        <section
          class="border-2 border-transparent flex items-center"
          id="proyectos"
        >
          <Projects />
        </section>
        <section class="border-2 border-transparent" id="tecnologÃ­as">
          <Skills />
        </section>
        <section class="border-2 border-transparent" id="sobremi">
          <SobreMi />
        </section>
      </main>
      <footer class=" rounded-lg shadow-sm m-4 dark:bg-[#0A0A0A]">
        <Footer />
      </footer>
    </div>
  </body>

  <style is:global>
    :root {
      color-scheme: light dark;
      scroll-behavior: smooth;
    }
    body {
      font-family: Onest, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    @media (prefers-reduced-motion: reduce) {
      html {
        scroll-behavior: auto;
      }
    }
  </style>

</html>
