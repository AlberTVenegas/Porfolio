---
import "./src/styles/global.css";
import Header from "../components/Header.astro";
import Resume from "../components/Resume.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";

interface Props {
  title?: string;
}
const { title = "Albert Venegas - Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta
      name="description"
      content="Portfolio de Albert Venegas, Programador Web"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&family=Onest:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div
      class="absolute top-0 z-[-2] w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
      <header class="fixed top-0 left-0 w-full z-50">
        <><Header id="top" /> </>
      </header>
      <main class="w-4xl mx-auto mt-36">
        <slot> <section><Resume /></section></slot>
        <section class="mt-36" id="experiencia">
          <div class="flex items-center gap-5 mb-7">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="#8E51FF"
              class="size-6 text-gray-900 dark:text-white"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M14 2a3 3 0 0 1 3 3v1h2a3 3 0 0 1 3 3v9a3 3 0 0 1 -3 3h-14a3 3 0 0 1 -3 -3v-9a3 3 0 0 1 3 -3h2v-1a3 3 0 0 1 3 -3zm0 2h-4a1 1 0 0 0 -1 1v1h6v-1a1 1 0 0 0 -1 -1"
              ></path></svg
            >

            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
              Experiencia Laboral
            </h2>
          </div>

          <Experience />
        </section>
        <section class="mt-36 flex items-center">
          <Projects />
        </section>
        <section class="mt-36">
          <Skills></Skills>
        </section>
      </main>
      <footer class="bg-white rounded-lg shadow-sm m-4 dark:bg-[#0A0A0A]">
        <div
          class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between"
        >
          <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
            >© 2025 Albert Venegas™ Casi todos los derechos reservados :D.
          </span>
          <ul
            class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0"
          >
          </ul>
        </div>
      </footer>
    </div>
  </body>

  <style is:global>
    :root {
      color-scheme: light dark;
      scroll-behavior: smooth;
    }
    body {
      font-family: Onest, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    @media (prefers-reduced-motion: reduce) {
      html {
        scroll-behavior: auto;
      }
    }
  </style>
</html>
