---
import "./src/styles/global.css";
import Header from "../components/Header.astro";
import Resume from "../components/Resume.astro";
import Experience from "../components/Experience.astro";

interface Props {
  title?: string;
}
const { title = "Albert Venegas - Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta
      name="description"
      content="Portfolio de Albert Venegas, Programador Web"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&family=Onest:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div
      class="absolute top-0 z-[-2] w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
      <header>
        <><Header /> </>
      </header>
      <main class="w-4xl mx-auto mt-36">
        <slot> <section><Resume /></section></slot>
        <section class="mt-36">
          <div class="flex items-center gap-5 mb-7">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="size-6"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M3 21h4l13 -13a1.5 1.5 0 0 0 -4 -4l-13 13v4"></path><path
                d="M14.5 5.5l4 4"></path><path d="M12 8l-5 -5l-4 4l5 5"
              ></path><path d="M7 8l-1.5 1.5"></path><path
                d="M16 12l5 5l-4 4l-5 -5"></path><path d="M16 17l-1.5 1.5"
              ></path></svg
            >
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
              Experiencia
            </h2>
          </div>

          <Experience />
        </section>
      </main>
    </div>
  </body>
  <style is:global>
    :root {
      color-scheme: light dark;
    }
    body {
      font-family: Onest, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height:;
    }
  </style>
</html>
